if ((!$#)); then
  echo "Usage: $0 quorum"
  exit 1
fi

quorum=$1

<% if @admin_password -%>
qmgmt -u <%= @quobyte_api_simple -%> user login admin <%= @admin_password %> >/dev/null
<% end %>

count=$(timeout 10 qmgmt -u <%= @quobyte_api_simple -%> registry list | wc -l)

<% if @admin_password -%>
qmgmt -u <%= @quobyte_api_simple -%> user logout >/dev/null
<% end -%>

if ! [[ $count =~ ^-?[0-9]+$ ]]; then
  echo "UNKOWN - could not get quobyte data"
  exit 3
fi

if ((count < quorum)); then
  echo "WARNING - quobyte registry quorum is $count/$quorum"
  exit 1
else
  echo "OK - quobyte registry quorum is $count/$quorum"
fi
